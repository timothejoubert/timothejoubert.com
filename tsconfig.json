{
    "compilerOptions": {
        "target": "ES2018",
        "module": "ESNext",
        "moduleResolution": "Node",
        "lib": [
            "ESNext",
            "ESNext.AsyncIterable",
            "DOM"
        ],
        "esModuleInterop": true,
        "allowJs": true,
        "sourceMap": true,
        "strict": true,
        "noEmit": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "./src/*"
            ],
            "@/*": [
                "./src/*"
            ],
            "~~/*": [
                "./*"
            ]
        },
        "types": [
            "@nuxt/types",
            "prismic-ts-codegen",
            "@prismicio/types",
            "@types/node",
            "nuxt-i18n",
            "@nuxt/image",
            "@nuxt/content",
            "webpack-env",
            "src/types/prismic/*.ts",
            "src/types/prismic/*d.ts",
//            "./prismicio-types.d.ts"
        ]
    },
    "exclude": [
        "node_modules",
        ".nuxt",
        "dist"
    ]
}
